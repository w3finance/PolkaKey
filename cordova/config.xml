<?xml version='1.0' encoding='utf-8'?>
<widget id="finance.w3.polkakey" version="$PACKAGE_VERSION">
    <name>PolkaKey</name>
    <hook type="before_build" src="scripts/prebuild.js" />
    <description>
        A secure and simple way to generate a Polkadot/Kusama address.
    </description>
    <author email="hizhaoyun@gmail.com" href="https://www.w3.finance">
        W3 Finance
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <icon background="res/icon/android/mipmap-mdpi/ic_launcher.png" density="mdpi" foreground="res/icon/android/mipmap-mdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-hdpi/ic_launcher.png" density="hdpi" foreground="res/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" foreground="res/icon/android/mipmap-xhdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" foreground="res/icon/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon background="res/icon/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" foreground="res/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />

        <!-- iOS 8.0+ -->
        <icon src="res/icon/ios/icon-180.png" width="180" height="180" />
        <!-- App store icon -->
        <icon src="res/icon/ios/icon-1024.png" width="1024" height="1024" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icon/ios/icon-58.png" width="58" height="58" />
    </platform>
</widget>
